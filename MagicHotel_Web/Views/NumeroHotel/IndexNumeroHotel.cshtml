@model IEnumerable<MagicHotel_Web.Models.Dto.NumeroHotelDto>
@{
    ViewData["Title"] = "IndexNumeroHotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Numero de Hoteles</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="NumeroHotel" asp-action="CrearNumeroHotel" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear Nuevo Numero de Hotel</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre del Hotel</th>
                <th>Numero de Hotel</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Hotel.Nombre</td>
                    <td>@item.HotelNo</td>
                    <td>
                        <a asp-controller="NumeroHotel" asp-action="ActualizarNumeroHotel" asp-route-hotelNo="@item.HotelNo" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="NumeroHotel" asp-action="RemoverNumeroHotel" asp-route-hotelNo="@item.HotelNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

