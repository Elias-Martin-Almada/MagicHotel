@model MagicHotel_Web.Models.ViewModel.NumeroHotelViewModel

@{
    ViewData["Title"] = "CrearNumeroHotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="CrearNumeroHotel">
    <div class="container border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="row">
            <h2 class="text-info">Crear Numero de Hotel</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Numero de Hotel</label>
                <input asp-for="NumeroHotel.HotelNo" class="form-control" />
                <span asp-validation-for="NumeroHotel.HotelNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Hotel</label>
                <select asp-for="NumeroHotel.HotelId" class="form-select" asp-items="@Model.HotelList">
                    <option value="">-- Seleccione un Hotel --</option>
                </select>
                <span asp-validation-for="NumeroHotel.HotelId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Detalle Especial</label>
                <textarea asp-for="NumeroHotel.DetalleEspecial" class="form-control"></textarea>
                <span asp-validation-for="NumeroHotel.DetalleEspecial" class="text-danger"></span>

            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Grabar</button>
            <a asp-controller="NumeroHotel" asp-action="IndexNumeroHotel" class="btn btn-success">Regresar</a>
        </div>

    </div>
</form>

